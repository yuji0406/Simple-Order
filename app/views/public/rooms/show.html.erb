<div class="container">
  <% if customer_signed_in? %>
    <p><%= @shop.shop_name %>とのチャットルーム</p>
    <div class="message-room">
      <% @messages.each do |message| %>
        <% if message.is_customer %>
          <div class="right-message">
            <%= message.content %>
          </div>
        <% else %>
          <div class="left-message">
            <% message.content %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% elsif shop_signed_in? %>
    <p><%= @customer.store_name %>とのチャットルーム</p>
    <div class="message-room">
      <% @messages.each do |message| %>
        <% if message.is_customer %>
          <div class="left-message">
            <%= message.content %>
          </div>
        <% else %>
          <div class="right-message">
            <%= message.content %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
  <%= form_with model: [@room, @message], url: room_messages_path(@room.id), local: true do |f| %>
    <%= f.text_field :content %>
    <%= f.submit "送信", class: "btn" %>
  <% end %>
</div>