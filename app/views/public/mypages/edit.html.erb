<div class="container-xl">
  <div class="form-box col-lg-8 mx-auto">
    <h3 class="page-title">会員情報編集</h3>
    <%= form_with model: @customer, url: mypages_path, local: true do |f| %>
      <%= render 'layouts/errors', model: @customer %>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "店舗名", class: "label-form"%>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :store_name, placeholder: "例：焼肉苑", class: "form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "責任者氏名", class: "label-form" %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :store_manager, placeholder: "責任者名", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "郵便番号(ハイフンなし）", class: "label-form" %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "住所", class: "label-form" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :address, placeholder: "東京都", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "電話番号（ハイフンなし）", class: "label-form" %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :phone_number, placeholder: "00000000000", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "メールアドレス", class: "label-form" %>
        </div>
        <div class="col-sm-6">
          <%= f.email_field :email, placeholder: "example@email.com", class: "form-control" %>
        </div>
      </div>
      <div class="text-center">
          <%= f.submit "登録する", class: "sign-btn" %>
      </div>
    <% end %>
  </div>
</div>