<div class="container-xl">
  <div class="form-box col-lg-8 mx-auto">
    <h3 class="page-title">新規会員登録</h3>
    <%= form_with model: @shop, url: customer_registration_path, local: true do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "店舗名", class: "label-form"%>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :store_name, placeholder: "例：焼肉苑", class: "form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "責任者氏名", class: "label-form" %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :store_manager, placeholder: "責任者名", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "郵便番号(ハイフンなし）", class: "label-form" %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :postal_code, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "住所", class: "label-form" %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :address, placeholder: "東京都", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "電話番号（ハイフンなし）", class: "label-form" %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :phone_number, placeholder: "00000000000", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "メールアドレス", class: "label-form" %>
        </div>
        <div class="col-sm-6">
          <%= f.email_field :email, placeholder: "example@email.com", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "パスワード（６文字以上）", class: "label-form" %>
        </div>
        <div class="col-sm-6">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "パスワード（確認用）", class: "label-form" %>
        </div>
        <div class="col-sm-6">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
      <div class="text-center">
          <%= f.submit "登録する", class: "sign-btn" %>
      </div>
    <% end %>
    <div class="session-links">
      <p class="nav">既に登録済みの方</p>
      <p><%= link_to"こちら",new_customer_session_path %>からログインしてください。</p>
      <div class="shop-link text-right">
        <%= link_to "業者の方はこちらから", new_shop_registration_path %>
      </div>
    </div>
  </div>
</div>