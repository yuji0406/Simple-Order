<div class="container">
  <div class="d-flex">
    <div class="item-image w-50">
      <%= attachment_image_tag @item, :item_image, fallback:"no_image.jpeg" %>
    </div>
    <div class="item-info w-50">
      <div class="item-content">
        <label>商品名</label>
        <%= @item.item_name %>
      </div>
      <div class="item-content">
        <label>ジャンル</label>
        <%= @item.item_genre %>
      </div>
      <div class="item-content">
        <label>価格（税抜き）</label>
        <%= "#{@item.item_price}円" %>
      </div>
      <div class="item-content">
        <label>商品説明</label>
        <%= @item.item_introduction %>
      </div>
      <div class="item-content">
        <label>販売ステータス</label>
        <% if @item.sale_status %>
        <p class="d-inline-block text-primary">在庫あり</p>
        <% else %>
        <p class="d-inline-block text-danger">品切れ</p>
        <% end %>
      </div>
      <%= link_to "商品を編集する", edit_shops_item_path(@item.id), class: "btn btn-primary w-100" %>
      <%= link_to "プレビューを表示", item_path(@item.id), class: "btn btn-success w-100" %>
    </div>
  </div>
</div>
