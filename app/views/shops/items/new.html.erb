<div class="container-xl">
  <div class="form-box col-lg-8 mx-auto text-center">
    <h3 class="page-title">商品新規登録</h3>
    <%= render 'layouts/errors', model: @item %>
    <%= form_with model: @item,url: shops_items_path,local: true do |f| %>
      <div class="form-group row">
        <div class="col">
        <label>
          <i class="fas fa-images">商品画像を選択する</i>
          <%= f.attachment_field :item_image, style: "display: none;" %>
        </label>
        </div>
      </div>
      <div class="form-group row">
        <div class="col">
          <%= f.label "商品名", class:"label-form"%>
        </div>
        <div class="col">
          <%= f.text_field :item_name,placeholder:"青森県産　王林", class:"form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col">
          <%= f.label "ジャンル", class:"label-form"%>
        </div>
        <div class="col">
          <%= f.select :item_genre, Item.item_genres.keys.to_a, {}, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col">
          <%= f.label "価格（税抜き）", class:"label-form"%>
        </div>
        <div class="col">
          <%= f.number_field :item_price, class:"form-control"%>
        </div>
      </div>
       <div class="form-group row">
        <div class="col">
          <%= f.label "商品説明", class:"label-form"%>
        </div>
        <div class="col">
          <%= f.text_area :item_introduction, class:"form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col">
          <%= f.label "販売ステータス", class:"label-form"%>
        </div>
        <div class="col">
          <div>
            <%= f.radio_button :sale_status, :true, checked: true %>
            <%= f.label :sale_status, "在庫あり", class: "d-inline-block" %>
          </div>
          <div>
            <%= f.radio_button :sale_status, :false %>
            <%= f.label :sale_status, "品切れ", class: "d-inline-block" %>
          </div>
        </div>
      </div>
      <div class="text-center">
        <%= f.submit "商品を登録する",class:"btn" %>
      </div>
    <% end %>
  </div>
</div>