<div class="container mt-3">
  <h3 class="d-inline-block bg-light">新規会員登録</h3>
  <%= form_with model:@shop,url: shop_registration_path,local: true do |f| %>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label "会社名",class:"label-form"%>
    </div>
    <div class="col-4">
      <%= f.text_field :shop_name,placeholder:"例：神田物産",class:"form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label "担当者氏名",class:"label-form"%>
    </div>
    <div class="col-4">
      <%= f.text_field :manager,placeholder:"担当者名",class:"form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label "ジャンル",class:"label-form"%>
    </div>
    <div class="col-4">
      <%= f.select :shop_genre, Shop.shop_genres.keys.to_a %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label "郵便番号（ハイフンなし）",class:"label-form"%>
    </div>
    <div class="col-4">
      <%= f.text_field :postal_code,placeholder:"0000000",class:"form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label "住所",class:"label-form"%>
    </div>
    <div class="col-8">
      <%= f.text_field :address,placeholder:"東京都渋谷区代々木神園町０−０",class:"form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label "電話番号（ハイフンなし）",class:"label-form"%>
    </div>
    <div class="col-4">
      <%= f.text_field :phone_number,placeholder:"00000000000",class:"form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label "メールアドレス",class:"label-form"%>
    </div>
    <div class="col-4">
      <%= f.email_field :email,placeholder:"example@email.com",class:"form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label "パスワード（６文字以上）",class:"label-form"%>
    </div>
    <div class="col-4">
      <%= f.password_field :password,class:"form-control"%>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-4">
      <%= f.label "パスワード（確認用）",class:"label-form"%>
    </div>
    <div class="col-4">
      <%= f.password_field :password_confirmation,class:"form-control"%>
    </div>
  </div>
  <div class="actions row my-4">
    <div class="col-4"></div>
    <div class="col-3">
      <%= f.submit "登録する",class:"btn-block btn btn-success" %>
    </div>
  </div>
  <% end %>
  <div class="col-5">
   <h3 class="d-inline-block bg-light">既に登録済みの方</h3>
     <div class="d-flex justify-content-center mt-4">
     <p><%= link_to"こちら",new_shop_session_path %>からログインしてください。</p>
     </div>
  </div>