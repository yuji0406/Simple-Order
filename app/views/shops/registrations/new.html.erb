<div class="container-xl">
  <div class="form-box col-lg-8 mx-auto">
    <h3 class="page-title">新規会員登録</h3>
    <%= form_with model: @shop, url: shop_registration_path,local: true do |f| %>
      <%= render "shops/shared/error_messages", resource: resource %>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "会社名", class:"label-form"%>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :shop_name, placeholder: "例：神田物産",class:"form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "担当者氏名", class:"label-form"%>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :manager,placeholder:"担当者名",class:"form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "ジャンル",class: "label-form"%>
        </div>
        <div class="col-sm-6">
          <%= f.select :shop_genre, Shop.shop_genres.keys.to_a %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "郵便番号（ハイフンなし）", class: "label-form"%>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "住所", class: "label-form"%>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町０−０", class: "form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "電話番号（ハイフンなし）", class: "label-form"%>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :phone_number,placeholder:"00000000000", class: "form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "メールアドレス", class: "label-form"%>
        </div>
        <div class="col-sm-6">
          <%= f.email_field :email, placeholder: "example@email.com", class: "form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "パスワード（６文字以上）", class: "label-form"%>
        </div>
        <div class="col-sm-6">
          <%= f.password_field :password, class: "form-control"%>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <%= f.label "パスワード（確認用）",class:"label-form"%>
        </div>
        <div class="col-sm-6">
          <%= f.password_field :password_confirmation, class: "form-control"%>
        </div>
      </div>
      <div class="text-center">
        <%= f.submit "登録する", class: "sign-btn" %>
      </div>
    <% end %>
    <div class="session-links">
      <p class="nav">※既に登録済みの方</p>
      <p><%= link_to"こちら",new_shop_session_path %>からログインしてください。</p>
      <div class="shop-link text-right">
        <%= link_to "店舗ユーザーの方はこちらから", new_customer_registration_path %>
      </div>
    </div>
  </div>
</div>