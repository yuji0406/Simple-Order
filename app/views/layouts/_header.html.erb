<% if customer_signed_in? %>
  <header class="header">
    <div class="navbar">
      <%= link_to root_path, class: "logo-opacity" do %>
        <%= image_tag 'simple_order_logo.png', class: 'site-logo' %>
      <% end %>
      <div class="right-navbar">
        <ul class="row navlists">
          <li class="login-user">ログイン中：<br>
              <%= current_customer.store_name %>様
          </li>
          <%= link_to mypages_path, class: "js-hover" do %>
            <li class="header-link">
              <span>MyPage<br>
                マイページ
              </span>
            </li>
          <% end %>
          <%= link_to items_path, class: "js-hover" do %>
            <li class="header-link">
              <span>Items<br>
                商品一覧
              </span>
            </li>
          <% end %>
          <%= link_to shops_path, class: "js-hover" do %>
            <li class="header-link">
                <span>Shops<br>
                  業者一覧
                </span>
            </li>
          <% end %>
          <%= link_to rooms_path, class: "js-hover" do %>
            <li class="header-link">
              <span>Messages<br>
                メッセージ一覧
              </span>
            </li>
          <% end %>
          <%= link_to favorites_path, class: "js-hover" do %>
            <li class="header-link">
              <span>Favorites<br>
                お気に入り
              </span>
            </li>
          <% end %>
          <%= link_to orders_path, class: "js-hover" do %>
            <li class="header-link">
              <span>Orders<br>
                注文一覧
                </span>
            </li>
          <% end %>
          <%= link_to cart_items_path, class: "js-hover" do %>
            <li class="header-link">
              <i class="fas fa-shopping-cart"></i>
            </li>
          <% end %>
          <%= link_to destroy_customer_session_path, method: :delete, class: "js-hover" do %>
             <li class="header-link">
              <i class="fas fa-sign-out-alt">SignOut</i>
            </li>
          <% end %>
        </ul>
      </div>
      <div id="hm-icon">
        <a class="menu-trigger" href="#">
          <span></span>
          <span></span>
          <span></span>
        </a>
      </div>
    </div>
  </header>
